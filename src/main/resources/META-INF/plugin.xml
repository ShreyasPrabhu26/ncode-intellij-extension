<idea-plugin>
    <id>com.technology.ncode</id>
    <name>NCode</name>
    <version>1.0.0</version>
    <vendor email="your-email@example.com" url="https://your-website.com">Niveus Solutions</vendor>
    <description>
        NCode is a plugin which boost productivity of the developers.
    </description>

    <application-components>
        <!-- Your application-level components if any -->
    </application-components>
    <actions>
        <action id="com.technology.ncode.GoogleThis" class="com.technology.ncode.GoogleThis" text="Google This!">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
    </actions>
</idea-plugin>
